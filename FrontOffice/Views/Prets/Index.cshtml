@model PagedList.IPagedList<Modeles.Pret>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 2%;">
    <h2>Mes prês</h2>
    <a href="/Prets/Create" style="margin-left: 2%;">
        <button type="button" class="btn btn-primary">
            Ajouter
        </button>
    </a>
</div>

<hr />

<form action="/Livres/Index" method="GET">
    <div class="form-group row">
        <div class="form-group" style="margin-left: 2%;">
            <label for="titre">Titre</label>
            <input class="form-control" type="text" name="titre" value="@ViewBag.titre" placeholder="Titre">
        </div>
        <div class="form-group" style="margin-left: 2%;">
            <label for="debut">Date de début</label>
            <input class="form-control" type="date" name="debut" value="@ViewBag.debut" placeholder="Début">
        </div>
        <div class="form-group" style="margin-left: 2%;">
            <label for="debut">Date de fin</label>
            <input class="form-control" type="date" name="fin" value="@ViewBag.fin" placeholder="Fin">
        </div>
        <div class="form-group" style="margin-left: 2%;">
            <label for="debut">Date de retour</label>
            <input class="form-control" type="date" name="retour" value="@ViewBag.retour" placeholder="Retour">        <input type="hidden" name="sortOrder" value="@ViewBag.sortOrder" />
        </div>
        <input type="hidden" name="page" value="1" />
        <div class="form-group" style="margin-left: 2%; margin-top: 2.5%;">
            <button class="btn btn-secondary" type="submit">Rechercher</button>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Titre", "Index", new { sortOrder = "titre", debut = ViewBag.debut, fin = ViewBag.fin, retour = ViewBag.retour })
        </th>
        <th>
            @Html.ActionLink("Date de début", "Index", new { sortOrder = "debut", debut = ViewBag.debut, fin = ViewBag.fin, retour = ViewBag.retour })
        </th>
        <th>
            @Html.ActionLink("Date fin", "Index", new { sortOrder = "fin", debut = ViewBag.debut, fin = ViewBag.fin, retour = ViewBag.retour })
        </th>
        <th>
            @Html.ActionLink("Date de retour", "Index", new { sortOrder = "retour", debut = ViewBag.debut, fin = ViewBag.fin, retour = ViewBag.retour })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Livres/Details/@item.LivreID">
                    @Html.DisplayFor(modelItem => item.Livre.Titre)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ddebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dfin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dretour)
            </td>
            <td>
                <button type="button" class="btn btn-link">@Html.ActionLink("Prêt", "Details", new { id = item.LivreID })</button>
            </td>
        </tr>
    }

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = "titre", debut = ViewBag.debut, fin = ViewBag.fin, retour = ViewBag.retour }))
